<h1>Modifier le potin</h1>

<%= form_for @gossip do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit "Enregistrer les modifications", class: "btn btn-primary" %>
  </p>
<% end %>

<%= link_to "Annuler", gossip_path(@gossip), class: "btn btn-secondary" %>

